<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_activity">

    <ImageButton
        android:id="@+id/back_button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_be_a_hero__icons_14"
        android:background="@null"/>


    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/third_question"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/willingLevel"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:background="@android:color/transparent"
        android:hint="   1-100"
        android:inputType="number" />

    <Button
        android:id="@+id/next_button3"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/next_button"
        android:text="@string/next_button"
        android:textAllCaps="false"
        android:textColor="#303f9f"
        android:textSize="20sp" />

</RelativeLayout>